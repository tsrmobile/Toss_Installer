<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:windowSoftInputMode="adjustPan|adjustResize"
    tools:context=".installation.InstallationActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

            <TextView
                android:id="@+id/printer_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="เชื่อมต่อกับปริ้นท์เตอร์แล้ว"
                android:textColor="@color/white"
                android:background="@color/LimeGreen"
                android:padding="2dp"/>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

                <include
                    layout="@layout/install_receipt_layout"/>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_colorprimarydark"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:paddingRight="4dp"
        android:paddingLeft="8dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/floating_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จบการทำงาน"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_accent"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:paddingRight="4dp"
        android:paddingLeft="8dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/floating_print_install_receipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="พิมพ์ใบรับการติดตั้ง"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_print_white_24dp"/>

    </RelativeLayout>

</RelativeLayout>
