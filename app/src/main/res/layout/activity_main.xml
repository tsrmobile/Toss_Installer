<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_2"/>

    <include
        android:id="@+id/header"
        layout="@layout/dashboard_header"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#024e67"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/button_sale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Orange">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/ic_sale64x64"
                        android:gravity="center"
                        android:text="ขายสินค้า"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:id="@+id/button_install"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/ic_installation"
                        android:gravity="center"
                        android:text="งานติดตั้ง"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/button_payment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/DeepSpringGreen">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableTop="@drawable/ic_payment84x84"
                        android:gravity="center"
                        android:text="เก็บเงิน"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:id="@+id/button_deposit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/DarkTurquoise">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableTop="@drawable/ic_deposit84x84"
                        android:gravity="center"
                        android:text="นำส่งเงิน"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/button_import"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Salmon">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableTop="@drawable/ic_cloud_download_white_48dp"
                        android:gravity="center"
                        android:text="เบิกสินค้า"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:id="@+id/button_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/Orchid">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:drawableTop="@drawable/ic_inbox_white_48dp"
                        android:gravity="center"
                        android:text="สินค้าคงเหลือ"
                        android:textColor="@color/White"
                        android:textSize="18sp" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/button_settings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/DarkViolet">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/ic_settings_white_48dp"
                        android:text="ตั้งค่า"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/White"/>

                </RelativeLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:id="@+id/button_logout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/FireBrick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@drawable/ic_power_settings_new_white_48dp"
                        android:text="ออกจากระบบ"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/White"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

