<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapcheckin.MapCheckinActivity">

    <LinearLayout
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.MapFragment"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_accent"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:paddingRight="4dp"
        android:paddingLeft="8dp"
        android:layout_alignParentBottom="true">

        <!--<android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_photo_camera_white_48dp"
            app:elevation="8dp"
            app:fabSize="normal"
            app:backgroundTint="@color/colorAccent"/>-->
        <Button
            android:id="@+id/floating_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ถ่ายรูป"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_photo_camera_white_24dp"/>

    </RelativeLayout>

</RelativeLayout>