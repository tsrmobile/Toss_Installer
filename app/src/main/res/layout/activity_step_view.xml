<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="th.co.thiensurat.toss_installer.installation.step.StepViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <LinearLayout
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="1."
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="ตรวจสอบข้อมูล"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/step1_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_circle_black_18dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="2."
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="สแกนสินค้าที่จะติดตั้ง"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/step2_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_circle_black_18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="3."
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="ถ่ายรูปการติดตั้งสินค้า"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/step3_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_circle_black_18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="4."
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="ถ่ายรูปบัตรประชาชน"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/step4_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_circle_black_18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="5."
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="ถ่ายรูปที่อยู่อาศัย"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/step5_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_circle_black_18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="6."
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="เช็คอินตำแหน่งที่ติดตั้ง"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/step6_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_circle_black_18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="7."
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="พิมพ์ใบสัญญาเช่าซื้อ/ซื้อขาย"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/step7_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_circle_black_18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/border_background"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="8."
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|left"
                android:text="พิมพ์ใบรับการติดตั้ง"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/step8_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_check_circle_black_18dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
